        <script><![CDATA[var course = new GlideRecord('x_535557_cred_course');
course.addQuery('state', '=', 1);
course.query();

while (course.next()) {
    // check start date
    var start_gdt = new GlideDateTime(course.getDisplayValue('u_mod_start'));
    var start = start_gdt.getDate();

    // get today's date
    var today_gdt = new GlideDateTime();
    var today = today_gdt.getDate();

    gs.info('Course found: ' + course.number);

    if (start == today) {
        course.state = 2;
    } else {
        gs.info('State not updated because start date == today is ' + (start == today));
    }
    course.update();
}]]></script>
